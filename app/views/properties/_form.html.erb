<%= form_for(@property) do |form| %>
  <% if @property.errors.any? %>
    <div id="error_explanation">
      <h2><%= @property.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @property.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :物件名 %><br>
    <%= form.text_field :name %>
    <br><br>
    <%= form.label :賃料 %><br>
    <%= form.text_field :price %>円
    <br><br>
    <%= form.label :住所 %><br>
    <%= form.text_field :address %>
    <br><br>
    <%= form.label :築年数 %><br>
    <%= form.text_field :year_built %>年
    <br><br>
    <%= form.label :備考 %><br>
    <%= form.text_field :note %>
    <br><br>
      <% a = 1 %>
      <%= form.fields_for :stations do |stations_form| %>
        <h2>最寄り駅<%= a %></h2>
        <br>
        <%= stations_form.label :路線名 %><br>
        <%= stations_form.text_field :train %><br>
        <br>
        <%= stations_form.label :駅名 %><br>
        <%= stations_form.text_field :station_name %><br>
        <br>
        <%= stations_form.label :徒歩分数 %><br>
        <%= stations_form.text_field :distance %>分<br>
        <% a += 1 %>
      <% end %>
  <br>
  <%= form.submit "登録する"%>
<% end %>
</div>

<%= link_to "戻る", properties_path %>